<table class="tablelist" width="100%" height="25" cellspacing="0" cellpadding="0" border="0">
  <tbody>
  <tr class="tableheader">
    <td colspan="2">查看页面<%= link_to("编辑", edit_a_article_path(@article),:class=>"icon icon-edit",:style=>"float:right;") %></td>
  </tr>
  <tr class="tablecell">
    <td>标题:</td>
    <td><%= @article.title %></td>
  </tr>
  <tr class="tablecell">
    <td>内容:</td>
    <td><%= @article.content.blank? ? "" : @article.content.html_safe %></td>
  </tr>
  <tr class="tablecell">
    <td>是否可见:</td>
    <td><%= @article.visible_txt %></td>
  </tr>
  <tr class="tablecell">
    <td>创建时间:</td>
    <td><%= format_time(@article.created_at) %></td>
  </tr>
  </tbody>
</table>